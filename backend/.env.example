# ===========================
# BHARAT BIZ-AGENT CONFIGURATION
# ===========================
# SECURITY: Copy to .env and fill in all values
# CRITICAL: NEVER commit .env file to git

# ===== SECURITY (REQUIRED) =====
# Set to "production" for production environment
ENVIRONMENT=development

# JWT Secret Key (CRITICAL - Change this before deploying)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters-required

# Token expiry times
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1

# HTTPS enforcement (set true in production)
SECURE_COOKIES=false

# ===== DATABASE =====
DATABASE_URL=sqlite:///./bharat.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/bharat_db

# ===== TELEGRAM BOT =====
# Get from @BotFather on Telegram: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ===== GROQ API (Optional - for LLM features) =====
# Get free key from: https://console.groq.com
GROQ_API_KEY=

# ===== CORS & ORIGINS =====
# List of allowed frontend origins (comma-separated if needed)
# Default: http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:3000

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ===== PASSWORD POLICY =====
MIN_PASSWORD_LENGTH=12
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== FRONTEND CONFIG =====
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================
# MIGRATION FROM OLD CONFIG
# ===========================
# If upgrading from old version:
# - OLD: 7-day tokens → NEW: 15 minutes
# - OLD: localStorage → NEW: httpOnly cookies
# - OLD: Weak defaults → NEW: Required strong values
# - Users will need to login again

